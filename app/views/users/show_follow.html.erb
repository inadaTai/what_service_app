<% provide(:page_title, "#{@title}" ) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
    <% if @user.picture.present? %>
      <%= image_tag @user.resize_home_icon %>
    <% else %>
      <img src="/default2.jpg" width="65px" height="65px">
    <% end %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "プロフィール", @user %></span>
      <span><%= link_to "投稿数:#{@user.microposts.count}", @user %></span>
      <span><%= "#{@user.introduct}" %></span>
    </section>
    <section class="stats">
      <%= render 'share/follow_status' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <% if user.picture.present? %>
              <%= image_tag user.resize_follow_icon %>
            <% else %>
              <img src="/default2.jpg" width="30px" height="30px">
            <% end %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate previous_label: '&lt 前へ', next_label: '次へ &gt' %>
    <% end %>
  </div>
</div>
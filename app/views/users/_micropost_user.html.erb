<aside class="col-md-4">
<section class="user_info">
  <h1>
    <% if @user.picture.present? %>
      <%= image_tag @user.resize_edit_icon %>
    <% else %>
      <img src="/default2.jpg" width="80px" height="80px">
    <% end %>
    <%= "ユーザー名：#{@user.name}" %>
  </h1>
  </section>
  <section class="status">
    <%= render 'share/follow_status' %>
  </section>
  <p><%= "記事の投稿数：#{@user.microposts.count}" %></p>
  <% if current_user?(@user) %>
    <%= link_to "プロフィール編集", edit_user_path %>
  <% end %>
  <span class="current_introduct">
  <% if @user.introduct.present? %>
    ■プロフィール■<br><%= "#{@user.introduct}" %>
  <% else %>
    ■プロフィール■<br>プロフィールが設定されていません
  <% end %>
  </span>
  <br><%= render 'follow_form' if logged_in? %>
</aside>
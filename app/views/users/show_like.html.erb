<% provide(:page_title, "#{@user.name}がいいねした記事" ) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
    <%= render 'share/user_status' %>
    </section>
    <section class="status">
      <%= render 'share/follow_status', user: @user %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @user.likes.any? %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts, previous_label: '&lt 前へ', next_label: '次へ &gt' %>
    <% end %>
  </div>
  </div>

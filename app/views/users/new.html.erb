<% provide(:page_title, '新規登録') %>
<h1>新規登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: signup_path, local: true) do |f| %>
    <%= render 'share/error_messages', object: f.object %>

    <%= f.label :name, "ユーザーネーム(サイト内で公開されるお名前です) (例:hoge_175)" %>
    <%= f.text_field :name, class:'form-control'%>

    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email,class:'form-control'%>

    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password,class:'form-control'%>

    <%= f.label :password_confirmation, "もう１度パスワード入力してください" %>
    <%= f.password_field :password_confirmation,class:'form-control'%>

    <br><%= f.submit "アカウント登録", class: "btn btn-primary" %>

    <% end %>

    <br><%= link_to "利用規約" , policy_path %><br>
  </div>
</div>
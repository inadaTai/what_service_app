<div class="user_icon">
<% if current_user.picture.present? %>
  <%= image_tag current_user.resize_home_icon %>
<% else %>
  <img src="/default2.jpg" width="65px" height="65px">
<% end %>
</div>
<h1><%= current_user.name %></h1>
<span><%= link_to "プロフィール", current_user %></span>
<span><%= link_to "投稿数：#{current_user.microposts.count}", current_user %></span>
<br>プロフィール：<br>
<span class="current_introduct">
  <% if current_user.introduct.present? %>
    <%= "#{current_user.introduct}" %>
  <% else %>
    プロフィールが設定されていません
  <% end %>
</span>
<% visiter=notification.visiter %>
<% post=notification.micropost %>

<div class="notification_user">
  <%= link_to user_path(notification.visiter) do %>
    <% if notification.visiter.picture.present? %>
      <%= image_tag notification.visiter.resize_icon %>
    <% else %>
      <img src="/default2.jpg" width="50px" height="50px">
    <% end %>
  <% end %>
  <%== notification_form(notification) %><span><%= " (#{time_ago_in_words(notification.created_at)}前)" %></span>
  <br>
  <% if !@comment.nil? %>
    コメント内容：<%= @comment %>
  <% end %>
</div>
<li id="micropost-<%=category.id%>">
  <div class="post-icon">
    <%= link_to category.user do %>
      <% if category.user.picture.present? %>
      <%= image_tag category.user.resize_home_icon %>
    <% else %>
      <img src="/default2.jpg" width="65px" height="65px">
    <% end %>
    <% end %>
    </div>
    <span class="user"><%= link_to "投稿者：#{category.user.name}", category.user %></span><br>
    <div class="post-title">
      <span class="name"><%= link_to "記事名：#{category.name}", category %></span>
      <span class="timestamp">
      投稿日 <%= "#{time_ago_in_words(category.created_at)}前" %>
      </span>
    </div>
</li>
